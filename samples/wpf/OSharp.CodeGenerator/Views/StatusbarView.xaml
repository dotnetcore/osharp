<StatusBar
  x:Class="OSharp.CodeGenerator.Views.StatusBarView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:OSharp.CodeGenerator.Views"
  mc:Ignorable="d" d:DesignHeight="30" d:DesignWidth="800"
  d:DataContext="{d:DesignInstance local:StatusBarViewModel}">
  <StackPanel Orientation="Horizontal" Background="Transparent">
    <TextBlock Text="{Binding Message}" Width="600" Foreground="White"/>
  </StackPanel>
</StatusBar>
